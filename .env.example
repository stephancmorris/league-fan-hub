# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Auth0 Configuration
AUTH0_SECRET=your-auth0-secret-here
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://your-api-audience

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nrl_fan_hub
DATABASE_URL_UNPOOLED=postgresql://user:password@localhost:5432/nrl_fan_hub
POSTGRES_PRISMA_URL=postgresql://user:password@localhost:5432/nrl_fan_hub
POSTGRES_URL_NON_POOLING=postgresql://user:password@localhost:5432/nrl_fan_hub

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your-redis-token

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001
WS_PORT=3001

# API Keys
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_SECRET_KEY=your-api-secret-key

# Feature Flags
NEXT_PUBLIC_ENABLE_PREDICTIONS=true
NEXT_PUBLIC_ENABLE_LEADERBOARD=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Monitoring & Analytics
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@nrlfanhub.com

# External APIs
NRL_API_KEY=your-nrl-api-key
NRL_API_URL=https://api.nrl.com

# Performance & Scaling
MAX_CONCURRENT_USERS=100000
ENABLE_CDN=true
ENABLE_COMPRESSION=true

# Development
NEXT_TELEMETRY_DISABLED=1
